@model CFirstApproach.Models.Employee

@{
    ViewData["Title"] = "Employee Profile";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card profile-card border-0 shadow-lg">
                <div class="card-header bg-gradient-info text-white p-4 border-0">
                    <div class="d-flex align-items-center">
                        <div class="profile-avatar me-4">
                            <div class="avatar-circle">
                                @Model.Name.Substring(0, 1)
                            </div>
                        </div>
                        <div>
                            <h2 class="mb-1">@Model.Name</h2>
                            <p class="mb-0">
                                <i class="fas fa-id-badge me-2"></i>Employee ID: #@Model.id
                            </p>
                        </div>
                    </div>
                </div>

                <div class="card-body p-4">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="info-card bg-light rounded p-4">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="icon-box bg-primary text-white me-3">
                                        <i class="fas fa-venus-mars"></i>
                                    </div>
                                    <div>
                                        <h6 class="text-muted mb-1">Gender</h6>
                                        <h5 class="mb-0">@Model.Gender</h5>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="info-card bg-light rounded p-4">
                                <div class="d-flex align-items-center mb-3">
                                    <div class="icon-box bg-success text-white me-3">
                                        <i class="fas fa-birthday-cake"></i>
                                    </div>
                                    <div>
                                        <h6 class="text-muted mb-1">Age</h6>
                                        <h5 class="mb-0">@Model.Age Years</h5>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="info-card bg-light rounded p-4">
                                <div class="d-flex align-items-center">
                                    <div class="icon-box bg-warning text-white me-3">
                                        <i class="fas fa-map-marker-alt"></i>
                                    </div>
                                    <div>
                                        <h6 class="text-muted mb-1">Current Location</h6>
                                        <h5 class="mb-0">@Model.City</h5>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4 text-center">
                        <div class="btn-group" role="group">
                            <a asp-action="Edit" asp-route-id="@Model?.id" class="btn btn-primary btn-lg">
                                <i class="fas fa-edit me-2"></i>Edit Profile
                            </a>
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="fas fa-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient-info {
        background: linear-gradient(45deg, #36b9cc 0%, #1a8a98 100%);
    }

    .profile-avatar .avatar-circle {
        width: 80px;
        height: 80px;
        background: rgba(255, 255, 255, 0.2);
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 32px;
        font-weight: bold;
    }

    .icon-box {
        width: 48px;
        height: 48px;
        border-radius: 12px;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 20px;
    }

    .info-card {
        transition: transform 0.3s ease;
    }

        .info-card:hover {
            transform: translateY(-5px);
        }

    .btn-group .btn {
        padding: 12px 24px;
    }
</style>
